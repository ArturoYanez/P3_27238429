<div id="botones">

    <a href="/productos" id=''>Volver</a>

</div>

 <h1 id="crear">Actualizar Producto</h1>

<form action="/update/<%=modelo.producto_id%>" method="post">
<div class='flex-principal'>
<!------------------------------------------->
<div id="editorcentrall">

    <div>
        
<label for="nombre">Nombre</label>

<input type="text" autofocus name="nombre" value="<%=modelo.nombre%>" />
    </div>
<!------------------------------------------>
<div>
    
<label for="codigo">Codigo</label>

<input name="codigo" type="number" value="<%=modelo.codigo%>" />

<!--------------------------------------------->
</div>
<!------------------------------------------>

<div>

<label for="precio">Precio</label>
<input type="number" name="precio" value="<%=modelo.precio%>">

</div>

<div>
    
<label for="descripcion">Descripcion</label>
<input type="text" name="descripcion" value="<%=modelo.descripcion%>">
</div>
<!----------------------------------------------------->

<div>

<label for="color">Color</label>
<input type="text" name="color" value="<%=modelo.color%>">
    
</div>
<!----------------------------------------------------->
